<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mauimgur.Utilities"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             xmlns:controls="clr-namespace:Mauimgur.Controls"
             x:Class="Mauimgur.MainPage">
    <ContentPage.IconImageSource>
        <FontImageSource Glyph=""
                         FontFamily="FASolid" />
    </ContentPage.IconImageSource>
    <Grid>
        <CollectionView Margin="5" ItemsSource="{Binding Images}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout HorizontalItemSpacing="5" VerticalItemSpacing="5" Orientation="Vertical" Span="4" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="Black" Background="White" StrokeThickness="1" WidthRequest="100" HeightRequest="100">
                         <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                        <Image Margin="5" Source="{Binding Link}" />
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
